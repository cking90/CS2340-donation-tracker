<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationAdapterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/locationNameTextView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/locationAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/locationNameTextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/locationIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/locationAddressTextView"
        android:layout_centerVertical="false"
        android:layout_marginLeft="30dp"
        android:text="TextView" />
</RelativeLayout>